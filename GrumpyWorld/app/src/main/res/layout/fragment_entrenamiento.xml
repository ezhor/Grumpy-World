<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arensis_games.grumpyworld.Fragments.EntrenamientoFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryLight"
        >
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:id="@+id/progress"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/progress">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorLetra"
            android:text="3 min 42 s restantes"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_above="@id/linearTitulosValores"
            android:textSize="20sp"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/tvTiempoRestante"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:id="@+id/linearTitulosValores"
            android:layout_marginLeft="10dp"
            >



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FUERZA"
                        android:textColor="@color/colorLetra"
                        android:textSize="25sp"
                        android:id="@+id/tvTituloFuerza"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="36"
                        android:textColor="@color/colorLetra"
                        android:textSize="25sp"
                        android:id="@+id/tvFuerza"
                        android:layout_gravity="center"
                        />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CONSTITUCIÃ“N"
                        android:textColor="@color/colorLetra"
                        android:textSize="25sp"
                        android:id="@+id/tvTituloConstitucion"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="36"
                        android:textColor="@color/colorLetra"
                        android:textSize="25sp"
                        android:id="@+id/tvConstitucion"
                        android:layout_gravity="center"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DESTREZA"
                        android:textColor="@color/colorLetra"
                        android:textSize="25sp"
                        android:id="@+id/tvTituloDestreza"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="36"
                        android:textColor="@color/colorLetra"
                        android:textSize="25sp"
                        android:id="@+id/tvDestreza"
                        android:layout_gravity="center"
                        />
                </LinearLayout>



        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_toRightOf="@id/linearTitulosValores"
            android:layout_alignTop="@id/linearTitulosValores"
            android:layout_alignBottom="@id/linearTitulosValores"
            android:layout_alignParentRight="true"
            android:id="@+id/rlBotones"
            >

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/boton"
                android:padding="10dp"
                android:src="@drawable/icono_aumentar"
                android:scaleType="fitXY"
                android:id="@+id/ibAumentarFuerza"
                android:layout_centerHorizontal="true"
                />
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/boton"
                android:padding="10dp"
                android:src="@drawable/icono_aumentar"
                android:scaleType="fitXY"
                android:id="@+id/ibAumentarConstitucion"
                android:layout_centerInParent="true"
                />
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/boton"
                android:padding="10dp"
                android:src="@drawable/icono_aumentar"
                android:scaleType="fitXY"
                android:id="@+id/ibAumentarDestreza"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>
