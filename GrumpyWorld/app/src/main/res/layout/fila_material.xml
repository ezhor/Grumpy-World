<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    >

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icono_material"
        android:id="@+id/ivIcono"
        android:layout_margin="5dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorLetra"
        android:text="PlÃ¡stico"
        android:textSize="20sp"
        android:id="@+id/tvNombre"
        android:layout_toRightOf="@id/ivIcono"
        android:layout_toEndOf="@id/ivIcono"
        android:layout_toLeftOf="@id/tvCantidad"
        android:layout_toStartOf="@id/tvCantidad"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorLetra"
        android:text="1 / 30"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:id="@+id/tvCantidad"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>